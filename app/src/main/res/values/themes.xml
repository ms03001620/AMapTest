<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AMapTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!--        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>-->
        <!--     <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>-->
    </style>


    <style name="ChargingFabMore">
        <item name="android:layout_width">@dimen/charging_station_fab_size</item>
        <item name="android:layout_height">@dimen/charging_station_fab_size</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_above">@+id/fab_positioning</item>
        <item name="android:layout_marginEnd">@dimen/charging_station_fab_margin</item>
    </style>


    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="actionModeBackground">@android:color/transparent</item>
        <item name="actionModeSplitBackground">@android:color/transparent</item>

    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="BaseNoTitleWithPaddingDialogStyle" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowNoTitle">true</item>
        <item name="android:paddingLeft">48dp</item>
        <item name="android:paddingRight">48dp</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="BaseText16ThirdPrimary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/base_color_third_primary</item>
        <item name="android:gravity">start|top</item>
    </style>

    <style name="Button_sign">
        <item name="android:background">@null</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/base_white</item>
    </style>

    <style name="BaseText20Primary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/base_color_primary</item>
        <item name="android:gravity">start|top</item>
    </style>

    <style name="BaseText16Primary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/base_color_primary</item>
        <item name="android:gravity">start|top</item>
    </style>

    <style name="ModalBottomSheetDialog1" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="StationDetailDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="actionModeSplitBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog1</item>

<!--
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>

        <item name="actionModeSplitBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>-->
    </style>

    <style name="BaseNoTitleDialogStyle" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ChargingBottomDialogAnim" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/charging_anim_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/charging_anim_dialog_exit</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">#FFFFFF</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

</resources>