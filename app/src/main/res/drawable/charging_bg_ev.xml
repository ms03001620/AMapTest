<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="-90"
                android:endColor="#00EB6C"
                android:startColor="#FFFFFF" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <!-- add bottom 1 offset for chinese char -->
            <padding
                android:bottom="3dp"
                android:left="8dp"
                android:right="8dp"
                android:top="2dp" />
            <stroke
                android:width="1dp"
                android:color="#000" />
        </shape>
    </item>
</layer-list>